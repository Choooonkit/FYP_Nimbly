<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Verification"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="65sp" />

    <TextView
        android:layout_width="301dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:elevation="10dp"
        android:text="Select certificate to share or Scan QR code for verification"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="italic"
        android:translationZ="10dp" />

    <Button
        android:id="@+id/button_cert"
        android:layout_width="191dp"
        android:layout_height="194dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="152dp"
        android:layout_marginStart="11dp"
        android:background="@drawable/buttonimage_cert" />

    <Button
        android:id="@+id/button_qrscan"
        android:layout_width="191dp"
        android:layout_height="194dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_cert"
        android:layout_marginEnd="11dp"
        android:background="@drawable/buttonimage_qrscan" />

</RelativeLayout>